{#
/**
 * @file
 * Custom layout based on Bootstrap Barrio's theme implementation to display a single page.
 *
#}
<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-primary fixed-top navbar-transparent " color-on-scroll="400">
	<div class="container">
		<div class="navbar-translate">
			<div class="navbar-brand" data-placement="bottom">
				{{ page.header }}
			</div>
			{% if page.primary_menu or page.header_form %}
				<button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-bar bar1"></span>
					<span class="navbar-toggler-bar bar2"></span>
					<span class="navbar-toggler-bar bar3"></span>
				</button>
			{% endif %}
		</div>
		{% if page.primary_menu %}
			<div class="collapse navbar-collapse justify-content-end" id="navigation" >
				{{ page.primary_menu }}
			</div>
		{% endif %}
		<div class="search_toggler"><span class="now-ui-icons ui-1_zoom-bold"></span></div>
	</div>
</nav>
<!-- End Navbar -->
<div class="wrapper">
	<div class="page-header page-header-small">
		<div class="page-header-image" data-parallax="true" style="background-image: url('sites/all/themes/afamallorca/images/header_home.jpg');"></div>
		<div class="container">
			<div class="content-center brand">
				<h1 class="h1-seo">AFA Mallorca</h1>
				<h3>Associaci√≥ de families de l'escola Mallorca</h3>
			</div>
		</div>
	</div>
	<div class="main">
		{% if page.highlighted %}
			<div class="highlighted">
				<aside class="{{ container }} clearfix" role="complementary">
					{{ page.highlighted }}
				</aside>
			</div>
		{% endif %}
		<div class="{{ container }} destacats_home clearfix" role="complementary">
			<div class="row">
				{% if page.featured_top %}
					{% block featured %}
						<div class="featured-top col col-sm-12 col-lg-6">
							<aside class="featured-top__inner clearfix" role="complementary">
								{{ page.featured_top }}
							</aside>
						</div>
					{% endblock %}
				{% endif %}
				{% if page.sidebar_first %}
					<div class="destacats_links col col-sm-12 col-lg-6">
						<aside class="clearfix" role="complementary">
							<h2>{% trans %} Destacats {% endtrans %}</h2>
							{{ page.sidebar_first }}
						</aside>
						<div class="banner-escola col col-sm-12">
							<a href="http://agora.xtec.cat/ceip-mallorca">
								<div class="content">
									<img src="/sites/all/themes/afamallorca/images/logo_escola.png" /> Coneix l'escola Mallorca
								</div>
							</a>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
		{% block content %}
			<div class="last_posts">
				<div class="{{ container }}">
					<div class="row clearfix">
						<main class="col">
							<section class="section">
								<a id="main-content" tabindex="-1"></a>
								{{ page.content }}
							</section>
						</main>
					</div>
				</div>
			</div>
		{% endblock %}
	</div>
	{% if page.featured_bottom_first or page.featured_bottom_second or page.featured_bottom_third %}
		<div class="featured-bottom">
			<div class="primary_mask"></div>
			<aside class="{{ container }} clearfix" role="complementary">
				{{ page.featured_bottom_first }}
				{{ page.featured_bottom_second }}
				{{ page.featured_bottom_third }}
			</aside>
		</div>
	{% endif %}
	<footer class="footer" data-background-color="black">
		{% block footer %}
			<div class="{{ container }}">
				{% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
					<div class="site-footer__top clearfix">
						{{ page.footer_first }}
						{{ page.footer_second }}
						{{ page.footer_third }}
						{{ page.footer_fourth }}
					</div>
				{% endif %}
				{% if page.footer_fifth %}
					<div class="site-footer__bottom">
						{{ page.footer_fifth }}
					</div>
				{% endif %}
				<div class="copyright">
					&copy;
					<script>
						document.write(new Date().getFullYear())
					</script> Afa mallorca
				</div>
			</div>
		{% endblock %}
	</footer>
	<div class="cover_layer"></div>







</div>
