{#
/**
 * @file
 * Custom layout based on Bootstrap Barrio's theme implementation to display a single page.
 *
#}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-primary fixed-top navbar-transparent " color-on-scroll="400">
	<div class="container">
		<div class="navbar-translate">
			<div class="navbar-brand" data-placement="bottom">
				{{ page.header }}
			</div>
			{% if page.primary_menu or page.header_form %}
				<button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-bar bar1"></span>
					<span class="navbar-toggler-bar bar2"></span>
					<span class="navbar-toggler-bar bar3"></span>
				</button>
			{% endif %}
		</div>
		{% if page.primary_menu %}
			<div class="collapse navbar-collapse justify-content-end" id="navigation" data-nav-image="sites/all/themes/afamallorca/images/blurred-image-1.jpg">
				{{ page.primary_menu }}
			</div>
		{% endif %}
	</div>
</nav>
<!-- End Navbar -->
<div class="wrapper">
	<div class="page-header clear-filter" filter-color="orange">
		<div class="page-header-image" data-parallax="true" style="background-image: url('sites/all/themes/afamallorca/images/header_home.jpg');">
		</div>
		<div class="container">
			<div class="content-center brand">
				<h1 class="h1-seo">AFA Mallorca</h1>
				<h3>L'associaci√≥ de pares de l'escola Mallorca</h3>
			</div>
		</div>
	</div>
	<main class="main">
		{% if page.highlighted %}
			<div class="highlighted">
				<aside class="{{ container }} section clearfix" role="complementary">
					{{ page.highlighted }}
				</aside>
			</div>
		{% endif %}
		{% if page.featured_top %}
			{% block featured %}
				<div class="featured-top">
					<aside class="featured-top__inner section {{ container }} clearfix" role="complementary">
						{{ page.featured_top }}
					</aside>
				</div>
			{% endblock %}
		{% endif %}
		{% block content %}
			<div class="row row-offcanvas row-offcanvas-left clearfix">
				{{ page.breadcrumb }}
				<main{{ content_attributes }}>
					<section class="section">
						<a id="main-content" tabindex="-1"></a>
						{{ page.content }}
					</section>
				</main>
				{% if page.sidebar_first %}
					<div{{ sidebar_first_attributes }}>
						<aside class="section" role="complementary">
							{{ page.sidebar_first }}
						</aside>
					</div>
				{% endif %}
				{% if page.sidebar_second %}
					<div{{ sidebar_second_attributes }}>
						<aside class="section" role="complementary">
							{{ page.sidebar_second }}
						</aside>
					</div>
				{% endif %}
			</div>
		{% endblock %}
	</main>
	{% if page.featured_bottom_first or page.featured_bottom_second or page.featured_bottom_third %}
		<div class="featured-bottom">
			<aside class="{{ container }} clearfix" role="complementary">
				{{ page.featured_bottom_first }}
				{{ page.featured_bottom_second }}
				{{ page.featured_bottom_third }}
			</aside>
		</div>
	{% endif %}
	<footer class="footer" data-background-color="black">
		{% block footer %}
			<div class="{{ container }}">
				{% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
					<div class="site-footer__top clearfix">
						{{ page.footer_first }}
						{{ page.footer_second }}
						{{ page.footer_third }}
						{{ page.footer_fourth }}
					</div>
				{% endif %}
				{% if page.footer_fifth %}
					<div class="site-footer__bottom">
						{{ page.footer_fifth }}
					</div>
				{% endif %}
				<div class="copyright">
					&copy;
					<script>
						document.write(new Date().getFullYear())
					</script> Afa mallorca
				</div>
			</div>
		{% endblock %}
	</footer>
</div>
